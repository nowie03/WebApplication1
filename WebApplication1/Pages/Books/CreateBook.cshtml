@page
@model WebApplication1.Pages.Books.CreateBookModel
@{
}
<div class="container-fluid "> 
<h1>Create Book</h1>
    @if (Model.AlertCode==0 && Model.ResultMessage.Length>0)
    {
        Console.WriteLine(Model.ResultMessage.Length);
        <div>   
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong> @Model.ResultMessage</strong>
                <button type="button" class="close" data-bs-dismiss="alert" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }
    @if (Model.AlertCode == 1 && Model.ResultMessage.Length > 0)
    {
        Console.WriteLine(Model.ResultMessage.Length);
        <div>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong> @Model.ResultMessage</strong>
                <button type="button" class="close" data-bs-dismiss="alert" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }
    <form method="post">
       <div class="row mb-3 p-3">
            <label class="col-sm-2 col-form-label" >Code :</label>
            <div class="col-sm-6">
                <input required name="book-code" class="form-control"/>
            </div>
       </div>
        <div class="row mb-3 p-3 ">
            <label class="col-sm-2 col-form-label">Title :</label>
            <div class="col-sm-6">
                <input required type="text" name="book-title" class="form-control" />
            </div>
        </div>
        <div class="row mb-3 p-3 ">
            <label class="col-sm-2 col-form-label">Category :</label>
            <div class="col-sm-6">
                <input required type="text" name="category" class="form-control" />
            </div>
        </div>
        <div class="row mb-3 p-3 ">
            <label class="col-sm-2 col-form-label">Author :</label>
            <div class="col-sm-6">
                <input required type="text" name="author" class="form-control" />
            </div>
        </div>
        <div class="row mb-3 p-3 ">
            <label class="col-sm-2 col-form-label">Publication :</label>
            <div class="col-sm-6">
                <input required type="text" name="publication" class="form-control" />
            </div>
        </div>
        <div class="row mb-3 p-3 ">
            <label class="col-sm-2 col-form-label">Published Date :</label>
            <div class="col-sm-6">
                <input required type="Date" name="published-date" class="form-control" />
            </div>
        </div>
        <div class="row mb-3 p-3 ">
            <label class="col-sm-2 col-form-label">Book Edition :</label>
            <div class="col-sm-6">
                <input required type="number" name="book-edition" class="form-control" />
            </div>
        </div>
        <div class="row mb-3 p-3 ">
            <label class="col-sm-2 col-form-label">Price :</label>
            <div class="col-sm-6">
                <input required type="text" name="price" class="form-control" />
            </div>
        </div>
        <button  type="submit" class="btn-success">submit</buttonc>
</form>
</div>